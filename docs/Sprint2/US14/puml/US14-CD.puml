@startuml
hide circle
skinparam classAttributeIconSize 0

class RegisterEmployeeView {
    +requestEmployeeData(): EmployeeData
    +requestRoleSelection(): Role
    +showEmployeeData(employee: Employee)
    +requestConfirmation(): boolean
}

class RegisterEmployeeController {
    +createEmployee(name, postalAddress, phoneNumber, email, citizenCardNumber, role): Employee
    +saveRegisteredEmployee(employee: Employee): Result
}

class Administrator {
    - name
    - email
    - phoneNumber
    +getEmployeeContainer(): EmployeeContainer
}

class EmployeeContainer {
    +create(name, postalAddress, phoneNumber, email, citizenCardNumber, role): Employee
    +add(employee: Employee): Result
    +checkDuplicates(employee: Employee): boolean
    +findById(id: string): Employee
    +getAll(): List<Employee>
}

class Employee {
    -Employee_id
    - name
    - postalAddress
    - phoneNumber
    - email
    - citizenCardNumber
    - role
    +isValid(): boolean
}

class Nurse {
}

class Receptionist {
}

Employee <|-- Nurse
Employee <|-- Receptionist

Administrator "1" -right-> "1" EmployeeContainer : maintains
EmployeeContainer "1" -right-> "0..*" Employee : records

RegisterEmployeeView ..> RegisterEmployeeController
RegisterEmployeeController ..> Administrator
RegisterEmployeeController ..> EmployeeContainer
RegisterEmployeeController ..> Employee

@enduml
